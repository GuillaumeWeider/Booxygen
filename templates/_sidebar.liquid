<div class="col-sm-3 col-md-2 sidebar">
    <ul class="nav nav-sidebar">
        <select id="versions_dropdown">
            <optgroup label="Modules">
                {% for compound in compounds %}{% if compound.kind == 'group' %}
                <option value="module_{% increment tmp %}">{{ compound.sub_xml.compounddef[0].title }}</option>
                {% endif %}{% endfor %}
            </optgroup>
            <optgroup label="Namespaces">
                {% for compound in compounds %}{% if compound.kind == 'namespace' %}
                <option value="namespace_{% increment tmp2 %}">{{ compound.sub_xml.compounddef[0].compoundname }}
                </option>
                {% endif %}{% endfor %}
            </optgroup>
        </select>

        <ul id="categories">
            <li class="category module_0">Classes
                <ul>
                    {% for compound in compounds %}{% if compound.kind == 'group' %}
                    {% for class in compound.sub_xml.compounddef[0].innerclass %}
                    <li><a href="{{ class.refid }}.html" class="element module_0">{{ class.content }}</a>
                    </li>
                    {% endfor %}{% endif %}{% endfor %}
                </ul>
            </li>

            <li class="category open_me module_0">Typesdef
                <ul>
                    <li>
                        <a class="element open_me module_0">Truc</a>
                    </li>
                </ul>
            </li>
        </ul>
    </ul>
</div>